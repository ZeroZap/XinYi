# Kconfig for XY xy_clib Component

config XY_XY_CLIB_ENABLE
    bool "xy_clib component support"
    default n
    help
      Enable support for the xy_clib component.
      This component provides custom C library for embedded systems.

if XY_XY_CLIB_ENABLE

config XY_XY_CLIB_TEST
    bool "Enable xy_clib component tests"
    default n
    depends on XY_XY_CLIB_ENABLE
    help
      Enable unit tests for the xy_clib component.

config XY_XY_CLIB_EXAMPLE
    bool "Enable xy_clib component examples"
    default n
    depends on XY_XY_CLIB_ENABLE
    help
      Enable example applications for the xy_clib component.

endif # XY_XY_CLIB_ENABLE
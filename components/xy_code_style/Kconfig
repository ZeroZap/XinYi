# Kconfig for XY xy_code_style Component

config XY_XY_CODE_STYLE_ENABLE
    bool "xy_code_style component support"
    default n
    help
      Enable support for the xy_code_style component.
      This component provides various functionalities.

if XY_XY_CODE_STYLE_ENABLE

config XY_XY_CODE_STYLE_TEST
    bool "Enable xy_code_style component tests"
    default n
    depends on XY_XY_CODE_STYLE_ENABLE
    help
      Enable unit tests for the xy_code_style component.

config XY_XY_CODE_STYLE_EXAMPLE
    bool "Enable xy_code_style component examples"
    default n
    depends on XY_XY_CODE_STYLE_ENABLE
    help
      Enable example applications for the xy_code_style component.

endif # XY_XY_CODE_STYLE_ENABLE
